rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default rule - deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Audio files
    match /audio/{userId}/{fileName} {
      // Allow authenticated users to upload their own audio files
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow owners to delete their own audio files
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Video files
    match /video/{userId}/{fileName} {
      // Allow authenticated users to upload their own video files
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow owners to delete their own video files
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Thumbnail files
    match /thumbnails/{userId}/{fileName} {
      // Allow authenticated users to upload their own thumbnail files
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow owners to delete their own thumbnail files
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile pictures
    match /profile_pictures/{userId}/{fileName} {
      // Allow authenticated users to upload their own profile pictures
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow owners to delete their own profile pictures
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
